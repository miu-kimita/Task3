<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>



<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user,book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <% @books.each do |books| %>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                <%= image_tag('no_image.jpg') %>
                <p><%= books.user.name %></p>
                  <% end %>
              </td>
              <td><%= link_to book_path(books.id) do %>
              <%= books.title %>
              <% end %></td>
              <td><%= books.body %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>